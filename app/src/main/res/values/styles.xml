<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="pi3">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/linen</item>
    </style>


    <style name="btn">
        <item name="android:textColor">@color/linen</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">135dp</item>
        <item name="android:layout_height">70dp</item>
    </style>


    <style name="txtInput">
        <item name="android:background">@drawable/input_corner_radius</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:ems">10</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="txtInputLogin">
        <item name="android:background">@drawable/input_corner_radius</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:ems">10</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">300dp</item>
    </style>


    <style name="txtCadastro">
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/input_corner_radius</item>
        <item name="android:ems">10</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:layout_width">310dp</item>
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="txtCadastro1">
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/input_corner_radius</item>
        <item name="android:ems">10</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:layout_width">310dp</item>
        <item name="android:inputType">textPersonName</item>
    </style>


    <style name="textCadastro">
        <item name="android:textSize">26dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>


    <style name="txtQuantidade">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">310dp</item>
        <item name="android:background">@drawable/input_corner_radius</item>
        <item name="android:ems">10</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="txtCardUser">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="cartao">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="cardBackgroundColor">@color/purple_200</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">10dp</item>
    </style>


    <style name="img_user">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="cardCornerRadius">30dp</item>
